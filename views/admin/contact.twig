{% extends './layout.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="text-center">
            <h1>Liste des contacts</h1>
        </div>
        <div>
            <table class="table table-striped table-responsive-md btn-table">
                <thead class="black white-text">
                <tr>
                    <th>Nom</th>
                    <th>Telephone</th>
                    <th>Email</th>
                    <th>Nom de la maison</th>
                    <th>Statut</th>
                    <th>action</th>
                </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr style="cursor: pointer">
                        <td>{{contact.nom}}</td>
                        <td>{{ contact.phone }}</td>
                        <td>{{ contact.email }}</td>
                        <td>{{ contact.nom_maison }}</td>
                        <td>{{ contact.statut == 0 ? "sans réponse":"répondu"}}</td>
                        <td>
                            {% if contact.statut == 0 %}
                                <a class="btn btn-primary btn-sm m-0" role="button" href="../admin/contact/{{ contact.id }}">répondre</a>
                            {% else %}
                                Déjà répondu
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}